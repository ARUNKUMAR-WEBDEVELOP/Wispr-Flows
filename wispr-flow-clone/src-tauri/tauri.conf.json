{
  // "$schema": "https://schema.tauri.app/config/v1/schema.json",
  "package": {
    "productName": "Wispr Flow Clone",
    "version": "0.1.0"
  },
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "active": true,
    "identifier": "com.yourname.wisprflowclone",
    "icon": 
    [
      "icons/icon.png",   
      "icons/icon.ico"    
    ]
  },
  "tauri": {
    "windows": [
      {
        "title": "Wispr Flow Clone",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.yourname.wisprflowclone",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico"
      ]
    },
    "allowlist": {
      "all": true
    }
  }
}
